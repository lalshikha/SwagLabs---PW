{
  "name": "swaglabs---pw",
  "version": "1.0.0",
  "description": "Playwright test automation framework for SwagLabs",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:dev": "cross-env TEST_ENV=DEV BASE_URL=https://www.saucedemo.com playwright test",
    "test:staging": "cross-env TEST_ENV=STAGING BASE_URL=https://www.saucedemo.com playwright test",
    "test:prod": "cross-env TEST_ENV=PROD BASE_URL=https://www.saucedemo.com playwright test",
    "test:allure": "playwright test && allure generate ./allure-results --clean && allure open",
    "report": "playwright show-report",
    "allure:serve": "allure serve ./allure-results"
  },
  "keywords": ["playwright", "automation", "testing"],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@types/node": "^25.2.3",
    "allure-playwright": "^3.4.5",
    "cross-env": "^10.1.0",
    "dotenv": "^17.3.1"
  }
}
